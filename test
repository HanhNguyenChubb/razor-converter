<asp:Content ID="Content2" ContentPlaceHolderID="HeaderCustomJavaScript" runat="server">
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            ////debugger;
            var brokerAuto = eval("<%=Model.brokerAuto%>");
            var brokerHome = eval("<%=Model.brokerProperty%>");
            var brokerDBU = eval("<%=Model.brokerDBU%>");


            ////debugger;
            if (brokerAuto == 0) {
                //debugger;
                $("#AutoImg").css({ 'opacity': '0.1' });
                $("#AutoLink").removeAttr("href");

            }

            if (brokerHome == 0) {

                $("#HomeLink").removeAttr("href");
                $("#HomeImage").css({ 'opacity': '0.1' });

            }

            //if (brokerDBU == 0) {
            //    $("#DBUDisclaimer").hide();
            //    $("#DBUDisclaimerTXT").hide();
            //}
        });       

    </script>
</asp:Content>

